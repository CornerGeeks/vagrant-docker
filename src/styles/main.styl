body{
	background-color: rgb(234,234,234);
}
.bespoke-slide.vagrant > div
, .bespoke-slide.docker > div {
	background-color: rgba(255,255,255,0.7);
	padding: 1em;
}
section.vagrant{
	background-image: url('../images/vagrant.png');
	background-position: top;
}
section.docker{
	background-image: url('../images/docker.png');
	background-position: bottom;
	background-repeat: no-repeat;
}
ol,ul {
	text-align: left
}
ol, ul {
	margin-left: 2em;
}
ul {
	list-style-type: circle;	
}
li{
	margin-bottom: 0.2em;
}
* {
	line-height: 1.4em;
}
.code {
	background-color: #000;
	color: #0f0;
	padding: 3px 5px;
	font-family: monospace;
}

.bespoke-scale-parent{
  pointer-events: none;
}
.bespoke-scale-parent .bespoke-active{
    pointer-events: auto;
}
